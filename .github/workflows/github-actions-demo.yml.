name: download-search-show
on: [push]
jobs:
  run:
    runs-on: ubuntu-latest
    container: docker://dvorg/cml:latest
    steps:
      - uses: actions/checkout@v2
      - name: Setup R
        uses: r-lib/actions/setup-r@master
      - name: Setup dependencies
        run: |
          R -e 'install.packages("renv")'
          R -e 'renv:restore()'
      - name: run my script
        env:
          repo_token: ${{ secrets.GITHUB_TOKEN }}
         run: |
          R -e 'renv::run("pdfs.R")'
          cml-publish of_interest.csv --csv > report.md 
          cml-send-comment report.md
        
     
